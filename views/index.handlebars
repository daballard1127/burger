<div class="container">
  <div class="ctn">
        <img class="center-block" src="http://www.freepngimg.com/thumb/burger/1-2-burger-transparent-thumb.png" alt="burger" width="350">
  </div>

<h1 class ="text-center">Da Burgers!</h1>


<div class="row">
  <h2>Burgers Available!</h2>
  <div class="col-lg-4">
<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li>
      {{this.burger_name}}
       
              <form action="/{{this.id}}">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour it!</button>
            </form>
          </li>
    {{/unless}}
  {{/each}}
</ol>
</div>

<h2>Burgers that are devoured!</h2>
<div class="col-lg-4">
<ol>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.burger_name}}
     <form action="/{{this.id}}">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>
</div>
</div>

<h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burg">Hamburger:</label>
        <input type="text" id="burg" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devo">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Eaten
      </div>

      <button type="submit">Add Hamburger</button>
    </form>
